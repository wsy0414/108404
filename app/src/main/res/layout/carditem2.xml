<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="245dp"
    android:layout_margin="6dp"
    android:padding="6dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="15dp"
    app:cardElevation="6dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:backgroundTint="@color/cardview_light_background">

        <TextView
            android:id="@+id/topicTextView"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="77dp"
            android:layout_height="23dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="51dp"
            android:text="92無鉛汽油"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="77dp"
            android:layout_height="23dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="60dp"
            android:text="95無鉛汽油"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/oil95Txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="77dp"
            android:layout_height="23dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="60dp"
            android:text="超級柴油"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/supOilTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oil95Txt"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="77dp"
            android:layout_height="23dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="51dp"
            android:text="98無鉛汽油"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/oil92Txt"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/oil92Txt"
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:layout_marginTop="89dp"
            android:breakStrategy="high_quality"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/oil95Txt"
            android:layout_width="135dp"
            android:layout_height="42dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="2dp"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/oil98Txt"
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="13dp"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/supOilTxt"
            android:layout_width="135dp"
            android:layout_height="42dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="13dp"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="123dp"
            android:layout_height="80dp"
            android:layout_marginEnd="75dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/topicTextView"
            app:srcCompat="@drawable/oilgun92" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="123dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="83dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/oilgun95" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="123dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="75dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:srcCompat="@drawable/oilgun98" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="123dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="83dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:srcCompat="@drawable/oilgunsup" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>