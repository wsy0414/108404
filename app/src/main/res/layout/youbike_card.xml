<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="6dp"
    android:padding="6dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="15dp"
    app:cardElevation="6dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ubikecityText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:text="YouBike租借"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/staText1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/staText1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="--"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ubikecityText" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="29dp"
            android:layout_weight="1"
            android:gravity="fill_vertical"
            android:text="可借："
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/staText1" />

        <TextView
            android:id="@+id/borText1"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:layout_marginTop="83dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="--"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView27"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="83dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="台，可還："
            android:textAlignment="center"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/borText1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bempText1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="83dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="--"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView28"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="83dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="台"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/bempText1"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>